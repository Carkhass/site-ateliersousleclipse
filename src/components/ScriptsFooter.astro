/*
  ScriptsFooter.astro
  Point d'injection client : bundle entry-client.js via Astro/Vite
  (Recommand√© pour production : unique source src/scripts, pas de public/scripts JS)
*/
---
<script type="module" src="/scripts/entry-client.js" defer></script>
<link rel="stylesheet" href="/scripts/entry-client.css" />

<!-- Patch mobile (inline safe) -->
<script is:inline>
  function setVH() {
    document.documentElement.style.setProperty('--vh', `${window.innerHeight * 0.01}px`);
  }
  window.addEventListener('resize', setVH);
  window.addEventListener('orientationchange', setVH);
  setVH();
</script>
