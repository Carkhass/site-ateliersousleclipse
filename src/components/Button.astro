<!-- src/components/Button.astro -->
---
const { variant = 'primary', children } = Astro.props;
---

<button
  class:list={[
    "px-4 py-2 rounded font-semibold transition-colors duration-200",
    variant === 'primary'
      ? "bg-accent text-bg hover:bg-accent/80"
      : "bg-surface text-text hover:bg-muted"
  ]}
>
  {children}
</button>
