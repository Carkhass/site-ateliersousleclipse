---
const nav = [
  { label: "Galerie", href: "/galerie/" },
  { label: "Disponibles", href: "/disponibles/" },
  { label: "Atelier", href: "/atelier/" },
  { label: "Contact", href: "/contact/" },
];
---

<header class="sticky top-0 z-50 bg-[color:var(--color-bg)]/80 backdrop-blur border-b border-white/10">
  <div class="container flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="Logo coutellerie" class="h-8 w-8" />
      <span class="font-serif text-lg">Coutellerie</span>
    </a>
    <nav class="flex items-center gap-6">
      {nav.map((item) => (
        <a class="text-sm text-muted hover:text-text transition" href={item.href}>
          {item.label}
        </a>
      ))}
      <a href="/disponibles/" class="text-sm px-3 py-1 rounded bg-[color:var(--color-accent)] text-[color:var(--color-bg)] hover:opacity-90 transition">
        Disponibles
      </a>
    </nav>
  </div>
</header>
